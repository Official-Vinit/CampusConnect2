<% layout('layouts/boilerplate') %>
<h2 class="text-center mt-4">My Favourite Posts</h2>

<div class="container mt-5">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    <% if (favourites.length > 0) { %>
      <% for (let post of favourites) { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <img src="<%= post.image %>" class="card-img-top" alt="Post Image" style="height: 180px; object-fit: cover;">
            <div class="card-body">
              <h5 class="card-title"><%= post.caption %></h5>
              <p class="card-text text-muted">
                <strong>Posted by:</strong> <%= post.author || 'Anonymous' %>
              </p>
              <p class="card-text"><small class="text-muted">ðŸ•’ <%= post.createdAt.toDateString() %></small></p>
            </div>
          </div>
        </div>
      <% } %>
    <% } else { %>
      <p class="text-center text-muted">You have no favourite posts yet.</p>
    <% } %>
  </div>
</div>