<% layout('layouts/boilerplate') %>

<style>
  body {
    background-color: #f4f6f9;
    font-family: 'Segoe UI', sans-serif;
  }

  .post-card {
    border: none;
    border-radius: 20px;
    overflow: hidden;
    background: #fff;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease-in-out;
  }

  .post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
  }

  .card-img-top {
    height: 300px;
    object-fit: cover;
  }

  .btn-sm {
    padding: 6px 12px;
    border-radius: 10px;
  }

  .list-group-item {
    border: none;
    background-color: #f8f9fa;
  }

  .card-footer {
    background-color: #f8f9fa;
  }
</style>

<div class="container mt-5">
  <h2 class="text-center mb-4 fw-bold text-primary">Welcome, <%= user.name %> ğŸ‘‹</h2>
  <h4 class="mb-4">Your Posts:</h4>

  <% if (user.posts.length === 0) { %>
    <p class="text-muted">You haven't posted anything yet.</p>
  <% } %>

  <div class="row row-cols-1 g-4">
    <% user.posts.forEach(post => { %>
      <div class="col">
        <div class="card post-card">
          <img src="<%= post.image %>" class="card-img-top" alt="Post Image">
          <div class="card-body">
            <h5 class="card-title fw-semibold"><%= post.caption %></h5>
            <p class="card-text text-muted mb-1">
              <strong>ğŸ‘ Upvotes:</strong> <%= post.upvotes %> |
              <strong>ğŸ‘ Downvotes:</strong> <%= post.downvotes %>
            </p>
            <p class="card-text">
              <small class="text-muted">ğŸ“… Posted on: <%= post.createdAt.toDateString() %></small>
            </p>

            <div class="d-flex justify-content-between mt-3">
              <a href="/posts/<%= user._id %>/<%= post._id %>/edit" class="btn btn-warning btn-sm">
                âœï¸ Edit
              </a>
              <form action="/posts/<%= user._id %>/<%= post._id %>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this post?')">
                  ğŸ—‘ï¸ Delete
                </button>
              </form>
            </div>
          </div>

          <% if (post.comments && post.comments.length > 0) { %>
            <ul class="list-group list-group-flush">
              <% post.comments.forEach(comment => { %>
                <li class="list-group-item">
                  <strong><%= comment.author || 'Anonymous' %>:</strong> <%= comment.text %><br>
                  <small class="text-muted"><%= comment.createdAt.toDateString() %></small>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <div class="card-footer text-muted">
              ğŸ’¬ No comments yet.
            </div>
          <% } %>
        </div>
      </div>
    <% }) %>
  </div>
</div>